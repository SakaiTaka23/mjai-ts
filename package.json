{
  "name": "mjai-ts",
  "version": "0.1.2",
  "description": "TypeScript library for parsing and managing mjai format mahjong game logs with core game state management",
  "license": "MIT",
  "keywords": [
    "mahjong",
    "riichi",
    "game"
  ],
  "author": "Takafumi Sakai",
  "homepage": "https://github.com/SakaiTaka23/mjai-ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SakaiTaka23/mjai-ts.git"
  },
  "packageManager": "pnpm@10.6.4",
  "exports": {
    "./types": {
      "import": "./packages/types/dist/index.js",
      "types": "./packages/types/dist/index.d.ts"
    },
    "./parser": {
      "import": "./packages/parser/dist/index.js",
      "types": "./packages/parser/dist/index.d.ts"
    },
    "./core": {
      "import": "./packages/core/dist/index.js",
      "types": "./packages/core/dist/index.d.ts"
    }
  },
  "scripts": {
    "types": "pnpm -F \"types\"",
    "core": "pnpm -F \"core\"",
    "parser": "pnpm -F \"parser\"",
    "test": "vitest",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "@mjai/eslint-config": "workspace:^",
    "@mjai/prettier-config": "workspace:^",
    "@mjai/tsconfig-config": "workspace:^",
    "eslint": "^9.26.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
