{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@types": [
        "src/types"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "*.js",
    "*.ts",
    "dist"
  ]
}
